<?xml version="1.0" encoding="utf-8"?>
<refresh.footer.LoadMoreFooterView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/load_more_footer_height_classic"
        android:gravity="center">

        <ProgressBar
            android:id="@+id/pro_bar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:indeterminateDrawable="@drawable/rotate_loading_360"
            android:indeterminateDuration="2000"
            android:visibility="visible"
            />

        <TextView
            android:id="@+id/tvLoadMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/pro_bar"
            android:textSize="14sp"
            android:layout_marginStart="4dp"
            android:text="LoadMore"
            android:textColor="#000000" />
    </RelativeLayout>
</refresh.footer.LoadMoreFooterView>