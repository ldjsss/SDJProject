<?xml version="1.0" encoding="utf-8"?>
<refresh.header.RefreshHeaderView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/refresh_header_height_twitter"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/refresh_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/logo" />

        <ProgressBar
            android:id="@+id/pro_bar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:indeterminateDrawable="@drawable/rotate_loading_360"
            android:indeterminateDuration="2000"
            android:visibility="invisible" />
    </RelativeLayout>
</refresh.header.RefreshHeaderView>