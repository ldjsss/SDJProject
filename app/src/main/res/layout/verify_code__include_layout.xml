<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/resgetcode_root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/phone"
            android:textColor="@color/color_ebe3d7"
            android:textSize="16sp" />

        <View
            android:id="@+id/resview_line00"
            android:layout_width="0.5dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="70dp"
            android:background="@color/color_1a1c26" />

        <EditText
            android:id="@+id/rescodetel_num_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/resview_line00"
            android:background="@color/transparent"
            android:hint="@string/phoneRemind"
            android:inputType="phone|number"
            android:maxLength="11"
            android:textColor="@color/color_ebe3d7"
            android:textColorHint="@color/color_cdc3b3"
            android:textCursorDrawable="@drawable/my_cursor"
            android:textSize="14sp" />

        <Button
            android:id="@+id/resget_verify_codebtn"
            android:layout_width="80dp"
            android:layout_height="@dimen/dp_25"
            android:layout_alignParentEnd="true"
            android:text="@string/get_verify_code"
            android:textColor="@color/colorService"
            android:layout_centerVertical="true"
            android:background="@drawable/outline_btn"
            android:textSize="12sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="5dp"
            android:background="@color/color_1a1c26" />

    </RelativeLayout>

</RelativeLayout>