<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginStart="@dimen/dp_10"
    android:layout_marginEnd="@dimen/dp_10">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/bettitlelayout"
        android:gravity="center_vertical"
        android:background="@drawable/rec_bettitle">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/gamebeticon"
            android:src="@mipmap/xzlb_rl"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_10"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/betresult"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/gamebeticon"
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/deleteall"
            android:textColor="@color/color_bg"/>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/betlrecycleview"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:overScrollMode="never"
        android:background="@color/color_262935"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/color_262935">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lookbetlist"
            android:textSize="16sp"
            android:id="@+id/bt_betlist"
            android:textColor="@color/color_cdc3b3"
            android:layout_weight="1"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/continuebet"
            android:textSize="16sp"
            android:id="@+id/bt_continue"
            android:textColor="@color/color_cdc3b3"
            android:layout_weight="1"
            android:gravity="center"/>
    </LinearLayout>


</LinearLayout>
