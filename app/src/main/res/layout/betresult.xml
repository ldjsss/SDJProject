<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginStart="@dimen/dp_10"
    android:layout_marginEnd="@dimen/dp_10">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/bettitlelayout"
        android:gravity="center_vertical"
        android:background="#252A3B">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gamebeticon"
            android:src="@mipmap/sobot_icon_switch_robot"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_20"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/betresult"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/gamebeticon"
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/deleteall"
            android:textColor="#74ACC3"/>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/betlrecycleview"
        android:layout_width="match_parent"
        android:layout_height="255dp"
        android:overScrollMode="never"
        android:background="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#252A3B">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lookbetlist"
            android:textSize="20sp"
            android:id="@+id/bt_betlist"
            android:textColor="#BDC5DE"
            android:layout_weight="1"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/continuebet"
            android:textSize="20sp"
            android:id="@+id/bt_continue"
            android:textColor="#74ACC3"
            android:layout_weight="1"
            android:gravity="center"/>
    </LinearLayout>


</LinearLayout>
