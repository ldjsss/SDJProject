<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/color_bg"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/toolbar_left_menu_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/main_user" />

        <ImageView
            android:id="@+id/toolbar_gameselect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_gameselect"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/toolbar_left_menu_iv"
            android:layout_marginLeft="8dp"/>

        <ImageView
            android:id="@+id/toolbar_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/main_navigation"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
        <RelativeLayout
            android:id="@+id/connectservice"
            android:layout_width="95dp"
            android:layout_height="@dimen/toolbar_height"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingEnd="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/connectservice"
                android:layout_centerVertical="true"
                android:textColor="@color/colorService"
                android:textSize="15sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@mipmap/main_service" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="2dp"
            android:background="@color/color_1a1c26" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            style="@style/FirstpageFragment_TabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabPaddingStart="1dp"
            app:tabPaddingEnd="1dp"
            app:tabBackground="@color/transparent" />
    </RelativeLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/firstpage_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"/>


</LinearLayout>