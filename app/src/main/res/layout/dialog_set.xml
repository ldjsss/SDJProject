<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/left_layout"
    android:orientation="vertical"
    android:background="@color/color_bg">

    <include layout="@layout/toolbar_back_layout"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/rec_stroke_969696"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_below="@id/top_layout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/dimen_15">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp"></View>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/goodmorning"
                                android:textColor="@color/color_cdc3b3"
                                android:textSize="12sp"
                                android:id="@+id/hellow"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="3dp"></View>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/visitor"
                                android:textColor="@color/color_cdc3b3"
                                android:textSize="16sp"
                                android:id="@+id/tvname"/>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/setiv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/main_settings"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/dp_15"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/setTitle"
                            android:textSize="14sp"
                            android:gravity="center_vertical"
                            android:textColor="@color/color_cdc3b3"
                            android:layout_toLeftOf="@+id/setiv"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/dp_5"/>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="15dp"></View>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#1B1E2A"/>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/packlayout"
                android:background="@drawable/rec_setceil_round"
                android:layout_marginStart="@dimen/dimen_10"
                android:layout_marginEnd="@dimen/dp_10">
                <ImageView
                    android:id="@+id/packed_iv"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/main_wallet"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_10"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/packed_iv"
                    android:layout_marginStart="@dimen/dp_10"
                    android:text="@string/wallet"
                    android:textSize="14sp"
                    android:textColor="@color/color_cdc3b3"/>
                <ImageView
                    android:id="@+id/right_arrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/main_next"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_10"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/right_arrow"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/surplus"
                        android:textSize="14sp"
                        android:textColor="@color/color_cdc3b3"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_10"
                        android:text="Â¥0"
                        android:textSize="14sp"
                        android:textColor="#86E5D8"
                        android:id="@+id/moneycur"/>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/rec_setceil_round"
                android:id="@+id/agency"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10">

                <ImageView
                    android:id="@+id/agency_iv"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/grsz_dl"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/agency_iv"
                    android:textColor="@color/color_cdc3b3"
                    android:text="@string/agency"
                    android:textSize="14sp"
                    android:layout_marginStart="@dimen/dp_10"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/main_next"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_10"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#1B1E2A"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/rec_setceil_round"
                android:id="@+id/share"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10">

                <ImageView
                    android:id="@+id/share_iv"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/grsz_fx"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/share_iv"
                    android:textColor="@color/color_cdc3b3"
                    android:text="@string/share"
                    android:textSize="14sp"
                    android:layout_marginStart="@dimen/dp_10"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/main_next"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_10"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#1B1E2A"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="@dimen/dp_40"
                android:background="@drawable/rec_setceil_round"
                android:id="@+id/recordlayout"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10">

                <ImageView
                    android:id="@+id/record_iv"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/main_record"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/record_iv"
                    android:textColor="@color/color_cdc3b3"
                    android:text="@string/BettingRecord"
                    android:textSize="14sp"
                    android:layout_marginStart="@dimen/dp_10"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/main_next"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_10"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#1B1E2A"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/rec_setceil_round"
                android:id="@+id/messlayout"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10">
                <ImageView
                    android:id="@+id/msg_iv"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/main_notification"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_10"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/msg_iv"
                    android:textColor="@color/color_cdc3b3"
                    android:text="@string/message"
                    android:textSize="14sp"
                    android:layout_marginStart="@dimen/dp_10"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/main_next"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_10"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#1B1E2A"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/rec_setceil_round"
                android:id="@+id/activitylayout"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10">
                <ImageView
                    android:id="@+id/activity_iv"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/main_move"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_10"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_cdc3b3"
                    android:text="@string/activity"
                    android:layout_toEndOf="@id/activity_iv"
                    android:textSize="14sp"
                    android:layout_marginStart="@dimen/dp_10"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/main_next"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_10"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#1B1E2A"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="@dimen/dp_40"
                android:id="@+id/rulelayout"
                android:background="@drawable/rec_setceil_round"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10">
                <ImageView
                    android:id="@+id/rule_iv"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/grsz_wfgz"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_cdc3b3"
                    android:text="@string/rules"
                    android:layout_toEndOf="@id/rule_iv"
                    android:textSize="14sp"
                    android:layout_marginStart="@dimen/dp_10"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/main_next"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_10"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#1B1E2A"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/rec_setceil_round"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:id="@+id/aboutlayout">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/main_version"
                    android:id="@+id/ivabout"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/ivabout"
                    android:textColor="@color/color_cdc3b3"
                    android:text="@string/about"
                    android:textSize="14sp"
                    android:layout_marginStart="@dimen/dp_10"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/main_next"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_10"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#1B1E2A"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/rec_setceil_round"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/main_version"
                    android:layout_centerVertical="true"
                    android:id="@+id/ivversion"
                    android:layout_marginStart="@dimen/dp_10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_cdc3b3"
                    android:text="@string/version"
                    android:textSize="14sp"
                    android:layout_toEndOf="@id/ivversion"
                    android:layout_marginStart="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dimen_10"
                    android:textColor="@color/color_cdc3b3"
                    android:text="v1.0.0(100)"
                    android:textSize="14sp"
                    android:id="@+id/version"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#1B1E2A"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
