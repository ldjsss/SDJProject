<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/mainflayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/activity_main_include_layout"/>

    </FrameLayout>
    <RelativeLayout
        android:id="@+id/left_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_bg"
        android:layout_marginRight="-65dp"
        android:layout_gravity="left"
        android:tag="LEFT">
        <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:background="@color/color_1a1c26">
            <ImageView
                android:id="@+id/back_main_iv"
                android:layout_width="@dimen/toolbar_height"
                android:layout_height="@dimen/toolbar_height"
                android:padding="@dimen/dp_10"
                android:src="@mipmap/main_back" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/myinformation"
                android:layout_centerInParent="true"
                android:textColor="@color/white"/>
             <ImageView
                 android:layout_width="@dimen/toolbar_height"
                 android:layout_height="@dimen/toolbar_height"
                 android:padding="@dimen/dp_10"
                 android:src="@mipmap/main_settings"
                 android:layout_centerVertical="true"
                 android:layout_alignParentEnd="true"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/color_989898"/>

        </RelativeLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:layout_below="@id/top_layout">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_100"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/dp_20"
                    android:background="@color/color_1a1c26">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="下午好！"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="st54166"
                        android:textColor="@color/white"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_989898"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_50"
                    android:background="@color/color_1a1c26">

                    <ImageView
                        android:id="@+id/packed_iv"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:src="@mipmap/main_version"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_20"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/packed_iv"
                        android:layout_marginStart="@dimen/dp_10"
                        android:text="钱包"
                        android:textColor="@color/white"/>
                    <ImageView
                        android:id="@+id/right_arrow"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:src="@mipmap/main_next"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dimen_20"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@id/right_arrow"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="余额"
                            android:textColor="@color/white"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/dp_10"
                            android:text="¥27。79"
                            android:textColor="@color/colorPrimary"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/color_989898"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_50"
                    android:layout_marginTop="@dimen/dp_40"
                    android:background="@color/color_1a1c26">
                    <ImageView
                        android:id="@+id/record_iv"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:src="@mipmap/main_version"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_20"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/record_iv"
                        android:textColor="@color/white"
                        android:text="投注记录"
                        android:layout_marginStart="@dimen/dp_10"/>
                    <ImageView
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:src="@mipmap/main_next"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dimen_20"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/color_989898"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_50"
                    android:background="@color/color_1a1c26">
                    <ImageView
                        android:id="@+id/msg_iv"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:src="@mipmap/main_version"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_20"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/msg_iv"
                        android:textColor="@color/white"
                        android:text="消息"
                        android:layout_marginStart="@dimen/dp_10"/>
                    <ImageView
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:src="@mipmap/main_next"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dimen_20"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/color_989898"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_50"
                    android:background="@color/color_1a1c26">
                    <ImageView
                        android:id="@+id/activity_iv"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:src="@mipmap/main_version"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_20"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@color/white"
                        android:text="活动"
                        android:layout_toEndOf="@id/activity_iv"
                        android:layout_marginStart="@dimen/dp_10"/>
                    <ImageView
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:src="@mipmap/main_next"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dimen_20"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/color_989898"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_50"
                    android:layout_marginTop="@dimen/dp_40"
                    android:background="@color/color_1a1c26"
                    >
                    <ImageView
                        android:id="@+id/rule_iv"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:src="@mipmap/main_version"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_20"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@color/white"
                        android:text="玩法规则"
                        android:layout_toEndOf="@id/rule_iv"
                        android:layout_marginStart="@dimen/dp_10"/>
                    <ImageView
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:src="@mipmap/main_next"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dimen_20"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/color_989898"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_50"
                    android:layout_marginTop="@dimen/dp_40"
                    android:background="@color/color_1a1c26"
                    >
                    <ImageView
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:src="@mipmap/main_version"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_20"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@color/white"
                        android:text="关于"
                        android:layout_marginStart="63dp"/>
                    <ImageView
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:src="@mipmap/main_next"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dimen_20"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/color_989898"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_50"
                    android:background="@color/color_1a1c26"
                    >
                    <ImageView
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:src="@mipmap/main_version"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_20"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@color/white"
                        android:text="版本"
                        android:layout_marginStart="63dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dimen_20"
                        android:textColor="@color/white"
                        android:text="v1.9"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/color_989898"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_alignParentBottom="true"
         android:layout_centerHorizontal="true"
         android:layout_marginBottom="@dimen/dp_20"
         >
         <TextView
             android:layout_width="150dp"
             android:layout_height="30dp"
             android:text="代理"
             android:gravity="center"
             android:textColor="@color/white"
             android:background="@drawable/rec_stroke_round4_969696"/>
         <TextView
             android:layout_width="150dp"
             android:layout_height="30dp"
             android:text="联系我们"
             android:textColor="@color/white"
             android:gravity="center"
             android:layout_marginStart="@dimen/dimen_30"
             android:background="@drawable/rec_stroke_round4_969696"/>

     </LinearLayout>

    </RelativeLayout>




</androidx.drawerlayout.widget.DrawerLayout>