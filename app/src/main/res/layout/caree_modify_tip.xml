<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/caree_tip_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_alpha20"
    android:clickable="true"
    android:focusable="true"
    android:visibility="gone"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="119dp"
        android:background="@drawable/rec_solid_round10_white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_20"
            android:src="@mipmap/error_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="修改职业信息需要重新认证!"
            android:textColor="@color/color_646464"
            android:textSize="18sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/dp_5"
            android:text="@string/caree_tip"
            android:textColor="@color/color_969696"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/caree_tip_close_iv"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_20"
        android:padding="10dp"
        android:src="@mipmap/close_circle_white" />
</LinearLayout>
