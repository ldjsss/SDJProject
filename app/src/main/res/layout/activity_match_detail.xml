<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical">

    <include layout="@layout/toolbar_back_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rec_stroke_round4_969696"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height">

            <ImageView
                android:id="@+id/gameicon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:paddingStart="10dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/game_csgo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:id="@+id/gamename"
                android:singleLine="true"
                android:textSize="14sp"
                android:text="ESL 职业联赛—美洲"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/gameicon"
                android:textColor="@color/white" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:id="@+id/gamenamecount"
                android:singleLine="true"
                android:textSize="14sp"
                android:text="/ BO3"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/gamename"
                android:textColor="@color/style_color_accent" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/img_layout"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="120dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gamestatus"
                android:singleLine="true"
                android:textSize="14sp"
                android:text="未开始"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/matchwin0"
                android:singleLine="true"
                android:textSize="35sp"
                android:text="0"
                android:layout_toStartOf="@id/gamestatus"
                android:layout_alignBaseline="@id/gamestatus"
                android:layout_marginRight="20dp"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/matchwin1"
                android:singleLine="true"
                android:textSize="35sp"
                android:text="0"
                android:layout_toEndOf="@id/gamestatus"
                android:layout_alignBaseline="@id/gamestatus"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/matchtime"
                android:singleLine="true"
                android:textSize="15sp"
                android:text="2019年5月11日"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:layout_toStartOf="@id/gamestatus"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/imgplayicon0"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/game_arena"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/playnamecommon0"
                    android:singleLine="true"
                    android:layout_gravity="center_horizontal"
                    android:textSize="14sp"
                    android:text="中国足球"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_toEndOf="@id/gamestatus"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/imgplayicon1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/game_csgo"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/playnamecommon1"
                    android:singleLine="true"
                    android:layout_gravity="center_horizontal"
                    android:textSize="14sp"
                    android:text="中国足球"
                    android:textColor="@color/white" />

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        style="@style/FirstpageFragment_TabLayout"
        android:layout_width="match_parent"
        app:tabPaddingStart="1dp"
        app:tabPaddingEnd="1dp"
        android:layout_height="wrap_content"
        app:tabBackground="@color/transparent" />

    <com.lldj.tc.toolslibrary.view.ViewPagerSlide
        android:id="@+id/page_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never" />


</LinearLayout>
