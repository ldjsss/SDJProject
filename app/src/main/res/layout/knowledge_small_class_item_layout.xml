<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingTop="10dp"
    android:paddingEnd="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/conver_iv"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="文章标题文章标题文章标题文章标题文章标题文章标题文章标题文章标题文章标题"
            android:textColor="@color/color_646464"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/summary_info_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="摘要摘要摘要摘要摘要摘要摘要摘要摘要摘要摘要摘要要摘要摘要摘要摘要摘要摘要摘要要摘要摘要摘要摘要摘要摘要摘要"
            android:textColor="@color/color_969696"
            android:textSize="11sp" />

        <include layout="@layout/label_include_layout" />

    </LinearLayout>

    <ImageView
        android:id="@+id/conver_iv"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/test_sub_bg" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/conver_iv"
        android:layout_marginTop="10dp"
        android:background="@color/color_e6e6e6" />
</RelativeLayout>