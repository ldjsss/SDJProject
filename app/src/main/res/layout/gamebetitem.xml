<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="38dp"
    android:orientation="horizontal"
    android:id="@+id/bottomgamelayout">

    <RelativeLayout
        android:layout_width="110dp"
        android:layout_marginStart="20dp"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/playname0"
            android:text="密尔瓦基雄鹿"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/rec_stroke_round4_969696" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playnamecommon0"
            android:singleLine="true"
            android:textSize="14sp"
            android:text="中国足球"
            android:paddingTop="3dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/gamebetlayout0"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gamebet0"
                android:singleLine="true"
                android:textSize="14sp"
                android:text="1.2"
                android:layout_centerInParent="true"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/imggamearrow0"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@mipmap/main_courage"
                android:layout_toRightOf="@id/gamebet0"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"/>

            <ImageView
                android:id="@+id/imggamelock0"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/main_lock"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/gamestatus"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:textSize="8sp"
        android:textColor="@color/google_green"
        android:text="@string/matchStatusFront"
        android:gravity="center_horizontal|bottom"
        android:layout_centerInParent="true"
        android:background="@mipmap/match_status_0"/>

    <RelativeLayout
        android:layout_width="110dp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentRight="true"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/playname1"
            android:text="多伦多猛龙"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/rec_stroke_round4_969696" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playnamecommon1"
            android:singleLine="true"
            android:textSize="14sp"
            android:text="中国足球"
            android:paddingTop="3dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/gamebetlayout1"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gamebet1"
                android:singleLine="true"
                android:textSize="14sp"
                android:text="1.2"
                android:layout_centerInParent="true"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/imggamearrow1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@mipmap/main_courage"
                android:layout_toLeftOf="@id/gamebet1"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"/>

            <ImageView
                android:id="@+id/imggamelock1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/main_lock"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>
