<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical">

    <VideoView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/videoView" />

    <ImageView
        android:id="@+id/photo_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_tv"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/main_logo"/>

    <!--手机号-->
    <include
        layout="@layout/tel_include_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/photo_iv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"/>
    <!--密码-->
    <include
        layout="@layout/psw_include_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tel_root_layout"
        android:layout_alignStart="@id/tel_root_layout"
        android:layout_marginTop="-8dp" />
    <!--验证码登录-->
    <TextView
        android:id="@+id/verify_code_login_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/psw_root_layout"
        android:layout_alignStart="@+id/psw_root_layout"
        android:padding="5dp"
        android:text="@string/verify_code_login"
        android:textColor="@color/color_646464"
        android:textSize="13sp"
        android:visibility="gone"/>
    <!--忘记密码-->
    <TextView
        android:id="@+id/forget_psw_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/psw_root_layout"
        android:layout_alignEnd="@+id/tel_root_layout"
        android:padding="5dp"
        android:text="@string/forget_psw"
        android:textColor="@color/color_544a36"
        android:textSize="14sp" />
    <!--登录-->
    <TextView
        android:id="@+id/login_tv"
        android:layout_width="320dp"
        android:layout_height="38dp"
        android:layout_below="@id/forget_psw_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/rec_00be0a_round100"
        android:gravity="center"
        android:text="@string/login"
        android:textColor="@color/black"
        android:textSize="20sp" />
    <!--注册-->
    <RelativeLayout
        android:id="@+id/register_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:padding="5dp">

        <TextView
            android:id="@+id/register_tv"
            android:layout_width="320dp"
            android:layout_height="38dp"
            android:background="@drawable/rec_1a1c26_round100"
            android:text="@string/register_str"
            android:textColor="@color/color_8e6c37"
            android:gravity="center"
            android:textSize="20sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/just_look_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:text="@string/just_looking_around"
        android:textColor="@color/color_544a36"
        android:textSize="15sp" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@id/just_look_tv"
        android:layout_alignStart="@id/just_look_tv"
        android:layout_alignEnd="@id/just_look_tv"
        android:layout_marginTop="-5dp"
        android:background="@color/color_544a36" />

</RelativeLayout>