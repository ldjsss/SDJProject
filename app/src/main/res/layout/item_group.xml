<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:descendantFocusability="beforeDescendants" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/groupLayout"></RelativeLayout>

    <ImageView
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:background="@mipmap/dktz_cha"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_27"
        android:id="@+id/iv_groupdelete"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_toRightOf="@+id/iv_groupdelete"
        android:layout_marginStart="20dp"
        android:orientation="vertical"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/tv_groupgame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="中国足球"
            android:textColor="@color/white"
            android:layout_weight = "2"/>
        <TextView
            android:id="@+id/tv_groupplays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:text="中国足球"
            android:textColor="@color/color_a09584"
            android:layout_weight = "1.5"/>
        <TextView
            android:id="@+id/tv_groupteams"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:text="中国足球vs中国足球"
            android:textColor="@color/color_a09584"
            android:layout_weight = "1.5"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dimen_20"
        android:orientation="vertical"
        android:layout_centerVertical="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight = "1">

            <TextView
                android:id="@+id/betinput_et"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_27"
                android:background="@drawable/mathbetbg"
                android:hint="@string/inputMoney"
                android:textColor="@color/color_ebe3d7"
                android:textColorHint="@color/color_a09584"
                android:textCursorDrawable="@drawable/my_cursor"
                android:textSize="12sp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:focusable="false"
                android:gravity="center"/>
        </RelativeLayout>

         <RelativeLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_weight = "1">
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/betwildgettv"
                 android:text="0.00"
                 android:textSize="11sp"
                 android:textColor="@color/white"
                 android:layout_centerVertical="true"
                 android:layout_alignParentEnd="true" />
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/willget"
                 android:textSize="11sp"
                 android:textColor="@color/color_a09584"
                 android:layout_centerVertical="true"
                 android:layout_marginEnd="3dp"
                 android:layout_toLeftOf="@+id/betwildgettv" />
         </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_centerVertical="true"
        android:text=""
        android:textColor="@color/color_a09584"
        android:id="@+id/betpercent"
        android:layout_alignParentEnd="true"
        android:singleLine="true"
        android:layout_marginEnd="130dp"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_1a1c26" />



</RelativeLayout>
