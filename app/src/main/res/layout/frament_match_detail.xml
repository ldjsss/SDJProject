<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical">

    <include layout="@layout/toolbar_back_layout" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rec_stroke_round4_969696"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:background="@drawable/mathtitle_bg"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10">

                <ImageView
                    android:id="@+id/gameicon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:paddingStart="10dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/game_csgo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:id="@+id/gamename"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:text="ESL 职业联赛—美洲"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/gameicon"
                    android:textColor="@color/color_cdc3b3" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:id="@+id/gamenamecount"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:text="/ BO3"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/gamename"
                    android:textColor="@color/color_8e6c37" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:id="@+id/gameplaycount"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginEnd="10dp"
                    android:text="+3"
                    android:textSize="14sp"
                    android:textColor="@color/color_cdc3b3"
                    android:gravity="center"
                    android:background="@drawable/rec_stroke_round4_969696" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/img_layout"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="120dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/gamestatus1"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:text="00:00:00"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="38dp"
                    android:textColor="@color/color_cdc3b3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/matchtime"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:text="2019年5月11日"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/color_cdc3b3" />


                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imglayout0">
                    <ImageView
                        android:id="@+id/imgplayicon0"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:src="@mipmap/game_arena"/>

                    <TextView
                        android:id="@+id/playnamecommon0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="12dp"
                        android:singleLine="true"
                        android:text="中国足球"
                        android:textColor="@color/color_cdc3b3"
                        android:textSize="14sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imglayout1"
                    android:layout_alignParentEnd="true">
                    <ImageView
                        android:id="@+id/imgplayicon1"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:src="@mipmap/game_arena"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/playnamecommon1"
                        android:singleLine="true"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="12dp"
                        android:textSize="14sp"
                        android:text="中国足球"
                        android:textColor="@color/color_cdc3b3" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/matchwin0"
                    android:singleLine="true"
                    android:textSize="30sp"
                    android:text="0"
                    android:layout_toRightOf="@id/imglayout0"
                    android:layout_marginLeft="-17dp"
                    android:layout_marginTop="28dp"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/matchwin1"
                    android:singleLine="true"
                    android:textSize="30sp"
                    android:text="0"
                    android:layout_toLeftOf="@id/imglayout1"
                    android:layout_marginRight="-17dp"
                    android:layout_marginTop="28dp"
                    android:textColor="@color/white" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="25dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/gamestatus"
                        android:singleLine="true"
                        android:textSize="14sp"
                        android:text="@string/matchStatusFront"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="28dp"
                    android:id="@+id/looklayout"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="18dp"
                    android:layout_centerHorizontal="true">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/lookmatch"
                        android:layout_centerInParent="true"
                        android:background="@drawable/look_match_bt"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/arrowplay"
                        android:textSize="20sp"
                        android:text="▶"
                        android:textColor="#78CFFD"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="8dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:singleLine="true"
                        android:text="直播"
                        android:gravity="center"
                        android:textColor="#78CFFD"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="8dp"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/vidiolayout"
            android:visibility="gone">
            <fm.jiecao.jcvideoplayer_lib.JCVideoPlayer
                android:id="@+id/videocontroller1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rec_stroke_round4_969696"
        android:layout_margin="@dimen/dp_10"
        android:orientation="vertical">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            style="@style/FirstpageFragment_TabLayout"
            android:layout_width="match_parent"
            app:tabPaddingStart="1dp"
            app:tabPaddingEnd="1dp"
            android:layout_height="wrap_content"
            app:tabBackground="@color/transparent" />
        <com.lldj.tc.toolslibrary.recycleview.LRecyclerView
            android:id="@+id/jingcairecycleview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>


</LinearLayout>
