<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar_back_layout" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_37"
            android:text="@string/ensure_identity_info"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <View
            android:layout_width="150dp"
            android:layout_height="@dimen/dp_5"
            android:layout_marginStart="@dimen/dp_57"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_57"
            android:background="@color/colorPrimary" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginStart="@dimen/dp_57"
            android:layout_marginEnd="@dimen/dp_57"
            android:background="@color/colorPrimary" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_57"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_57">

            <TextView
                android:id="@+id/real_name_str_tv"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:lineSpacingExtra="@dimen/dp_20"
                android:text="@string/real_name"
                android:textColor="@color/color_969696"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/real_name_et"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_toEndOf="@id/real_name_str_tv"
                android:paddingEnd="@dimen/dp_15"
                android:background="@color/transparent"
                android:gravity="center_vertical|end"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/name_arrow"
                android:layout_width="5dp"
                android:layout_height="10dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/arrow_grey_right" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@id/real_name_et"
                android:background="@color/color_969696" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_57"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_57">

            <TextView
                android:id="@+id/id_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:lineSpacingExtra="@dimen/dp_20"
                android:text="@string/certificate_type"
                android:textColor="@color/color_969696"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/id_type_num"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_toEndOf="@id/id_type_tv"
                android:background="@color/transparent"
                android:paddingEnd="@dimen/dp_15"
                android:gravity="center_vertical|end"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/type_arrow"
                android:layout_width="5dp"
                android:layout_height="10dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/arrow_grey_right" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@id/id_type_num"
                android:background="@color/color_969696" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_57"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_57">

            <TextView
                android:id="@+id/certification_num_str_tv"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:lineSpacingExtra="@dimen/dp_20"
                android:text="有效期    "
                android:textColor="@color/color_969696"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/certification_num_et"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_toEndOf="@id/certification_num_str_tv"
                android:background="@color/transparent"
                android:gravity="end|center_vertical"
                android:textSize="16sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@id/certification_num_et"
                android:background="@color/color_969696" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/next_step_tv"
        android:layout_width="335dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_50"
        android:background="@drawable/rec_00be0a_round100"
        android:gravity="center"
        android:text="@string/next_step"
        android:textColor="@color/white"
        android:textSize="18sp" />

</RelativeLayout>