<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="15dp"
    android:id="@+id/msg_root_layout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/rec_solid_round100_969696"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        android:text="2018.12.31 23:38:00"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="@dimen/dp_10"
        android:background="@drawable/rec_solid_round10_white">

        <View
            android:id="@+id/left_bg"
            android:layout_width="@dimen/dp_10"
            android:layout_height="match_parent"
            android:background="@drawable/rec_solid_leftround10_dcdcdc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_toStartOf="@+id/arrow_iv"
            android:orientation="vertical">

            <TextView
                android:id="@+id/msg_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="平小安医生现场演示手术操作平小安医生现场演示手术操作"
                android:textColor="@color/color_646464"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/msg_content_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="@dimen/dp_15"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="平小安医生现场演示手术操作平小安医生现场演示手术操作"
                android:textColor="@color/color_969696"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/arrow_iv"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:padding="2dp"
            android:src="@mipmap/arrow_grey_right" />

    </RelativeLayout>


</LinearLayout>